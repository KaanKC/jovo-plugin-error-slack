{
  "compilerOptions": {
    "lib": [
      "es2017"
    ],
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "declaration": true,
    "strict": true,
    "outDir": "./dist/src/",
    "target": "es2017",
    "sourceMap": true
  },
  "include": [
    "**/*.d.ts",
    "src/**/*",
    "test/**/*"
  ],
  "exclude": [
    "dist/**/*",
    "node_modules/**/*",
    "**/*.spec.ts"
  ]
}